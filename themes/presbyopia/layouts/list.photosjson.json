{
  "version": "https://jsonfeed.org/version/1",
  "title": {{ .Site.Title | jsonify }},
  "icon": "{{ .Site.Params.avatar }}",
  "home_page_url": "{{ .Site.BaseURL }}",
  "feed_url": "{{ .Site.BaseURL }}photos/index.json",
  "items": [
    {{- $list := where site.RegularPages ".Params.photos" "ne" nil -}}
    {{- $len := (len $list) -}}
    {{ range $index, $value := $list }}
      {{- if .Params.photos }}
    {
        "id": "{{ .Permalink | relURL }}",
        {{- if .Title }}
        "title": {{ .Title | jsonify }},
        {{- else if .Params.x_title }}
        "title": {{ if .Params.x_source -}}{{ printf "%s [%s]" .Params.x_title .Params.x_source | jsonify }}{{ else -}}{{ .Params.x_title | jsonify }}{{ end -}},
        {{- end }}
        "date_published": "{{ .Date.Format "2006-01-02T15:04:05-07:00" }}",
        "url": "{{ .Permalink | relURL }}",
        {{ range first 1 .Params.photos }}"image": "{{ . | absURL }}"{{ end }},
        "content_text": {{ .Plain | truncate 120 | htmlUnescape | jsonify }}
    }
        {{- if ne (add $index 1) $len -}},{{- end }}
      {{- end -}}
    {{- end }}
  ]
}
